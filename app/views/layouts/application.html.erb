                <a class="nav-link" href="/public/blogs">blogs</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="#">tracks</a>
              </li>
              
              <% end %>
            </ul>
            <form class="form-inline my-2 my-lg-0">
