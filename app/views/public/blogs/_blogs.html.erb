<div class="blogs">
	<% @blogs.each do |blog| %>
	  <div class="card mb-1">
	  	<div class="card-body">
	  		<p>
	  			<%= image_tag blog.blog_image_url(thumb) if blog.blog_image.present? %>
	  		</p>
	  		<p class="card-text"><%= blog.title %></p>
	  		<p class="card-text"><small><%= simple_format blog.body %></small></p>
	  		<% if blog.favorited_by?(current_user) %>
				<p>
				    <%= link_to public_blog_favorites_path(blog), method: :delete do %>
				    <i class="far fa-heart"></i>
				    <%= blog.favorites.count %> いいね
				    <% end %>
				</p>
				<% else %>
				<p>
				    <%= link_to public_blog_favorites_path(blog), method: :post do %>
				    <i class="far fa-heart"></i>
				    <%= blog.favorites.count %> いいね
				    <% end %>
			    </p>
			<% end %>
			<% if @user == current_user %>
		  		<p><%= link_to 'Edit', edit_public_blog_path(@blog) %></p>
		  		<p><%= link_to 'Destroy', public_blog_path(@blog), method: :delete, "data-confirm" => "Are you sure？" %></p>
	  		<% end %>
	  	</div>
	  </div>
	<% end %>
</div>