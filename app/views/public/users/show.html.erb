<div class="container">
<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
       <h3><span style="background-color:#CCCCCC;">マイページ</span></h3>
    </div>
    <div class="col-xs-10">
	<h3><strong>登録情報</strong></h3>
	<table>
		<tr>
			<td>
				<%= link_to "編集する", edit_public_user_path, class: "btn btn-primary" %>

				<%= link_to "パスワードを変更する", edit_user_password_path, class: "btn btn-primary" %>
	        </td>
	    </tr>
	</table>
	<table>
		<div class="table table-bordered">
			<div class="table-title">
				<h4 class="table-title">氏名
					<%= @user.last_name %>  <%= @user.first_name %>
				</h4>

			    <h4 class="table-title">カナ
			    	<%= @user.sub_last_name%>  <%= @user.sub_first_name %>
			    </h4>
			    <h4 class="table-title">郵便番号
			    	<%= @user.postal_code %>
			    </h4>
			    <h4 class="table-title">住所
			    	<%= @user.address %>
			    </h4>
			    <h4 class="table-title">電話番号
                    <%= @user.phone_number %>
			    </h4>
			    <h4 class="table-title">メールアドレス
			    	<%= @user.email %>
			    </h4>
			</div>
		</div>
	</table>
</div>
</div>