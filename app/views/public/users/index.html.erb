<style>
        img{
          width: 100%;
          height: 80px;
        }

        .container{
	    	margin-top: 15%;
	    }

</style>

<div class="page-info">
    All Users
</div>

<div class="container">
	<div class="row">
		<% @users.each do |user| %>
			<div class="col-3">
				<div class="card-deck">
				  <div class="card" style="width: 15vh;">
				  	<figure class="image-4by3" style="margin: auto; padding: 0.5em;">
				  		<%= link_to public_user_path(user) do %>
				  	        <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %>
				        <% end %>
				  	</figure>

				    <div class="card-content">
						投稿数：<%= user.blogs.count %>
					</div>

					<%= link_to "Show", public_user_path(user), class: "btn btn-outline-info" %>
				    <div class="card-footer">
				      <small class="text-muted">
				      	  <i class="far fa-calendar-alt"></i>
				      	  <%= user.created_at.strftime("%Y-%m-%d %H:%M") %><br>
				      	  @<%= user.username %>
				      </small>
				    </div>
				  </div>
				</div>
			</div>
		<% end %>
		<%= paginate @users2 %>
	</div>
</div>





































