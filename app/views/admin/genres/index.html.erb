<style>

.container{
	margin-top: 15%;
	margin-left: 25%;
}

th{
	color: white;
}

td{
	color: white;
}
td > .btn{
	margin-right: 40px;
}
</style>

<div class="page-info">
	Genre all/add
</div>


<div class="container">
	<div class="row">
		<div class="col-8">
			<%= form_for [:admin,@genre] do |f| %>
				<% if @genre.errors.any? %>
					<div id="error_explanation">
				      <p><%= @genre.errors.count %>件のエラーが発生しました。</p>
				      <ul>
					      <% @genre.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
				      </ul>
				    </div>
		 		 <% end %>
				<%= f.text_field :name, placeholder: 'add genre'%>
				<%= f.submit '追加', class: "btn btn-outline-success btn-sm"%>
			<% end %>
			<table class="table table-striped mt-2">
				<thead>
					<th><strong>All Genre</strong></th>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td><%= link_to "編集",edit_admin_genre_path(genre.id), class: "btn btn-outline-primary btn-sm"%></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>