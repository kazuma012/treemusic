<style>
.page-info{
position: absolute;
top: 15%;
left: 50%;
transform: translate(-50%,-50%);
color: #1670f0;
padding: 30px 60px;
font-size: 30px;
letter-spacing: 2px;
text-transform: uppercase;
text-decoration: none;
box-shadow: 0 20px 50px rgba(0,0,0,.5);
overflow: hidden;
}

.page-info:before{
	content: '';
	position: absolute;
	top: 2px;
	left: 2px;
	bottom: 2px;
	width: 40%;
	background: rgba(255,255,255,0.05);
}

.container{
	margin-top: 15%;
	margin-left: 15%;
}

td{
	color: white;
}
</style>


<div class="page-info">
    All Users
</div>
<div class="container">
  <div class="col-10 mt-5">
    <table class="table">
        <thead class="thead-dark">
            <tr>
				<th scope="col">会員ID</th>
			    <th scope="col">氏名</th>
			    <th scope="col">メールアドレス</th>
			    <th scope="col">ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td scope="row">
					<%= user.id %>		
			    </td>

				<td>
					<%= link_to (user.username), admin_admin_path(user) %>
				</td>

				<td>
					<%= user.email %>
				</td>
				<td>
					<% if user.flag == false %>
					   <h4><small>有効</small></h4>
					<% else %>
					   <h4><small>退会済み</small></h4>
					<% end %>
				</td>
			</tr>
			<% end %>
			<%= paginate @users2 %>
		</tbody>
    </table>
  </div>
</div>